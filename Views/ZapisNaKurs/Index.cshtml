@model IEnumerable<ProjektZaliczeniowyASP.NET.Models.ZapisNaKursModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Zapisy na kursy</h1>

<p>
    <a asp-action="Create">Zapisz nowego studenta na kurs</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kurs)
            </th>
            <th>
                Data zapisu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Imie)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Student.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kurs.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataZapisu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
