@model ProjektZaliczeniowyASP.NET.Models.ZapisNaKursModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Czy na pewno chcesz usunąć ten zapis?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kurs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kurs.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataZapisu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataZapisu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powróć do listy zapisów</a>
    </form>
</div>
