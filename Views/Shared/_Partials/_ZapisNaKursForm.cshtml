@model ProjektZaliczeniowyASP.NET.Models.ZapisNaKursModel

@{
    var studenci = ViewData["StudentId"] as SelectList;
    var kursy = ViewData["KursId"] as SelectList;
}

<form asp-action="@(Model.Id > 0 ? "Edit" : "Create")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="studenci">
            <option value="">-- Wybierz Studenta --</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KursId" class="control-label">Kurs</label>
        <select asp-for="KursId" class="form-control" asp-items="kursy">
            <option value="">-- Wybierz Kurs --</option>
        </select>
        <span asp-validation-for="KursId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataZapisu" class="control-label"></label>
        <input asp-for="DataZapisu" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DataZapisu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</form>
